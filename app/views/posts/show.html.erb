<h4>Showing post <%= @post.title %></h4>
<p>
	<%= @post.description %>
</p>

<%= render 'shared/errors', obj: @comment %>

<%= form_for [@post, @comment] do |c| %>
  <div class='control-group'>
    <%= c.label :body, "Leave a comment" %>
    <%= c.text_area :body, rows: 3, class: 'span4' %>
  </div>
  <%= c.submit "Create comment", class: 'btn btn-primary'%>
<% end %>

<h5>Comments:</h5>
<% @post.comments.each do |comment| %>
  <div class = 'well span8' >
    <em>"<%= comment.body %>"</em>
    <br />
    <span class="quiet">by</span> <%=link_to comment.user.username, user_path(comment.user) %>
      <small> at <%= comment.created_at %></small>
    </div>
<% end %>