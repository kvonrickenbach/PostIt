<h1>Editing post</h1>

<% if @post.errors.any? %>
  <div class="alert alert-error"?
  <h5>Please fix the following errors:</h5>
  <ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.submit %>
<% end %>

<%= link_to 'Show', posts_path %> |
<%= link_to 'Back', posts_path %>
